{
  "$ref": "#/definitions/Recipie",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Recipie": {
      "additionalProperties": false,
      "properties": {
        "cookingTime": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "subtitle": {
          "type": "string"
        },
        "prepTime": {
          "type": "string"
        },
        "servs": {
          "type": "string"
        },
        "sections": {
          "items": {
            "$ref": "#/definitions/Section"
          },
          "type": "array"
        }
      },
      "required": [
        "title",
        "subtitle",
        "sections"
      ],
      "type": "object"
    },
    "Section": {
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "ingredients": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "instructions": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": [
        "title",
        "ingredients",
        "instructions"
      ],
      "type": "object"
    },
    "Ingredient": {
      "additionalProperties": false,
      "properties": {
        "qt": {
          "type": "number"
        },
        "unit": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "qt",
        "unit",
        "name"
      ],
      "type": "object"
    }
  }
}